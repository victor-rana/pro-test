<FrameLayout

  android:layout_width="match_parent"
  android:layout_height="60dp"
  android:layout_below="@+id/toolbar_common"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
      android:id="@+id/frame_pick_date"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1">

      <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:src="@drawable/right_arrow_filled_blue" />

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
          android:id="@+id/tv_start_date"
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="4dp"
          android:layout_marginRight="4dp"
          android:paddingLeft="2dp"
          android:text="--"
          android:textColor="@color/white"
          android:textSize="40sp"
          android:textStyle="bold" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:layout_toRightOf="@+id/tv_start_date"
          android:orientation="vertical">

          <TextView
            android:id="@+id/tv_month_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="--"
            android:textColor="@color/white"

            />

          <TextView
            android:id="@+id/tv_start_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/white"

            />

        </LinearLayout>

      </RelativeLayout>

    </FrameLayout>

    <LinearLayout
      android:id="@+id/container_end"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="horizontal">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
          android:id="@+id/tv_end_date"
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginLeft="4dp"
          android:layout_marginRight="4dp"
          android:text="--"
          android:textColor="@color/white"
          android:textSize="40sp"
          android:textStyle="bold" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginRight="8dp"
          android:layout_toLeftOf="@+id/tv_end_date"
          android:orientation="vertical">

          <TextView
            android:id="@+id/tv_end_month_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="end"
            android:text="--"
            android:textColor="@color/white" />

          <TextView
            android:id="@+id/tv_end_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="--"
            android:textColor="@color/white"

            />

        </LinearLayout>

      </RelativeLayout>
    </LinearLayout>
  </LinearLayout>
</FrameLayout>