<LinearLayout
  android:layout_width="match_parent"
  android:layout_height="0dp"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_weight="1"
  android:baselineAligned="false"
  android:orientation="horizontal"
  xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout
    android:id="@+id/pickdate"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <TextView
      android:id="@+id/time_textview"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="2"
      android:textStyle="bold"
      android:layout_marginRight="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="8dp"
      android:textSize="20sp"
      android:gravity="center"
      android:background="@drawable/bg_rounded_rectangle"


      android:padding="4dp"
      android:textColor="#fff"
      />

    <TextView
      android:id="@+id/date"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:layout_gravity="center"
      android:gravity="top|center"

      android:background="#2da9e1"
      android:textColor="@color/white"
      android:layout_marginRight="8dp"
      android:layout_marginLeft="8dp"
      />
    <TextView
      android:id="@+id/year"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:layout_gravity="center"
      android:gravity="center"
      android:textColor="@color/white"
      android:layout_marginRight="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginBottom="8dp"
      android:background="#ce2da9e1"
      />

  </LinearLayout>
  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:orientation="vertical"
    android:layout_margin="8dp">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:baselineAligned="false"
      android:layout_weight="1">
      <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="4dp"
        android:orientation="horizontal"
        >

        <ImageView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          app:srcCompat="@drawable/ic_distance_blue"
          />
        <TextView
          android:id="@+id/totaldistance"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="4"
          android:textColor="@color/white"
          android:text="@string/dash"
          android:layout_gravity="center"
          android:gravity="center"/>
      </LinearLayout>
      <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="4dp"
        android:orientation="horizontal">
        <ImageView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          app:srcCompat="@drawable/ic_pump_blue"
          />
        <TextView
          android:id="@+id/fuelconsumed"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="4"
          android:textColor="@color/white"
          android:text="@string/dash"
          android:layout_gravity="center"
          android:gravity="center"/>

      </LinearLayout>
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:baselineAligned="false"
      android:layout_weight="1"
      android:layout_marginTop="4dp">
      <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="4dp"
        android:orientation="horizontal">
        <ImageView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          app:srcCompat="@drawable/ic_clock_blue"
          />
        <TextView
          android:id="@+id/totaltime"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="4"
          android:text="@string/dash"
          android:textColor="@color/white"
          android:layout_gravity="center"
          android:gravity="center"/>

      </LinearLayout>
      <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="4dp"
        android:orientation="horizontal">

        <ImageView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          app:srcCompat="@drawable/ic_rupee_blue"
          />
        <TextView
          android:id="@+id/totalcost"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="4"
          android:text="@string/dash"
          android:textColor="@color/white"
          android:layout_gravity="center"
          android:gravity="center"/>
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>

</LinearLayout>