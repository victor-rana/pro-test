<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
  android:layout_height="match_parent"
  android:orientation="horizontal"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <androidx.cardview.widget.CardView
    android:id="@+id/card_view1"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    card_view:cardBackgroundColor="#1e1f1f"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="12dp">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#00000000"
      android:orientation="vertical"
      >

      <TextView
        android:id="@+id/profile_card_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2da9e1"
        android:gravity="center"
        android:padding="4dp"
        android:text="--"
        android:textColor="@color/white"
        />

      <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="8dp"
        app:srcCompat="@drawable/ic_car_profile"
        />

      <TextView
        android:id="@+id/profile_card_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:text="--"
        android:textColor="@color/white"
        />

      <TextView
        android:id="@+id/profile_card_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:text="--"
        android:textColor="@color/white"
        />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        >

        <TextView
          android:id="@+id/tv_engine_cc"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center"
          android:padding="4dp"
          android:text="--"
          android:textColor="@color/white"
          />

        <View
          android:layout_width="0.5dp"
          android:layout_height="match_parent"
          android:background="@drawable/gradient_vertical_transparent_white_transparent"
          />

        <TextView
          android:id="@+id/profile_card_engine_type"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center"
          android:padding="4dp"
          android:text="--"
          android:textColor="@color/white"
          />
      </LinearLayout>
      <TextView
        android:id="@+id/tv_profile_edit_car_info"
        android:layout_width="100dp"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_rounded_blue"
        android:text="Edit"
        android:layout_margin="8dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="#fff"/>

      <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/gradient_horizontal_transparent_white_transparent"
        />


      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:text="Subscription Status"
        android:textColor="@color/white"
        />

      <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:max="365"
        android:progress="2"
        android:visibility="gone"
        />

      <TextView
        android:id="@+id/tv_remaining_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:text=""
        android:textColor="@color/white"
        />

      <TextView
        android:id="@+id/tv_car_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:text="Status - "
        android:textColor="@color/white"
        />
      <TextView
        android:id="@+id/tv_profile_subsription"
        android:layout_width="100dp"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_rounded_blue"
        android:text="Renew"
        android:layout_margin="8dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="#fff"/>


    </LinearLayout>
  </androidx.cardview.widget.CardView>



</LinearLayout>
