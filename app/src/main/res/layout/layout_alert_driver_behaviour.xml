<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
  android:layout_width="match_parent"
  android:layout_height="0dp"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_weight="1"
  android:background="#1e1f1f"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="7.5">

    <android.support.v7.widget.CardView
      android:id="@+id/card_over_speeding"
      android:layout_width="100dp"
      android:layout_height="match_parent"
      android:background="#1e1f1f"
      app:cardBackgroundColor="@color/transparent"
      app:cardCornerRadius="8dp"
      app:cardElevation="4dp"
      app:cardUseCompatPadding="true">

      <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_vertical_black_transparent_black">


        <ImageView
          android:layout_width="32dp"
          android:layout_height="32dp"
          android:layout_above="@id/view_overspeeding"
          android:layout_centerHorizontal="true"
          android:layout_marginBottom="8dp"
          android:scaleType="centerCrop"
          app:srcCompat="@drawable/ic_overspeed" />


        <View
          android:id="@+id/view_overspeeding"
          android:layout_width="80dp"
          android:layout_height="0.5dp"
          android:layout_centerInParent="true"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:background="@drawable/gradient_horizontal_transparent_white_transparent" />

        <TextView
          android:id="@+id/driver_count_over_speed"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/view_overspeeding"
          android:layout_marginTop="4dp"
          android:gravity="center"
          android:text="--"
          android:textColor="@color/white" />

        <TextView
          android:id="@+id/alert_type_overspeed"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/driver_count_over_speed"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="4dp"
          android:gravity="center"
          android:text="Over Speeding"
          android:textColor="@color/white"
          android:textSize="12sp"
          android:textStyle="bold" />

      </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
      android:id="@+id/card_hard_acceleration"
      android:layout_width="100dp"
      android:layout_height="match_parent"
      android:background="#1e1f1f"
      app:cardBackgroundColor="@color/transparent"
      app:cardCornerRadius="8dp"
      app:cardElevation="4dp"
      app:cardUseCompatPadding="true">

      <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_vertical_black_transparent_black">



        <ImageView
          android:layout_width="32dp"
          android:layout_height="32dp"
          android:layout_marginBottom="8dp"
          android:alpha="0.7"
          android:layout_centerHorizontal="true"
          android:layout_above="@+id/view_rash_driving"
          app:srcCompat="@drawable/ic_rashdriving" />


        <View
          android:id="@+id/view_rash_driving"
          android:layout_width="80dp"
          android:layout_height="0.5dp"
          android:layout_centerInParent="true"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:background="@drawable/gradient_horizontal_transparent_white_transparent" />

        <TextView
          android:id="@+id/count_hard_acceleration"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/view_rash_driving"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="4dp"
          android:gravity="center"
          android:text="--"
          android:textColor="@color/white" />

        <TextView
          android:id="@+id/driver_type_rashdriving"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/count_hard_acceleration"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="4dp"
          android:gravity="center"
          android:text="Hard Acc."

          android:textColor="@color/white"
          android:textSize="12sp"
          android:textStyle="bold" />


      </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
      android:id="@+id/card_sudden_braking"
      android:layout_width="100dp"
      android:layout_height="match_parent"
      android:background="#1e1f1f"
      app:cardBackgroundColor="@color/transparent"
      app:cardCornerRadius="8dp"
      app:cardElevation="4dp"
      app:cardUseCompatPadding="true">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_vertical_black_transparent_black">



        <ImageView
          android:layout_width="32dp"
          android:layout_height="32dp"
          android:layout_marginBottom="8dp"
          android:layout_above="@+id/view_sudden_braking"
          android:layout_centerHorizontal="true"
          app:srcCompat="@drawable/ic_sudden_braking" />


        <View
          android:id="@+id/view_sudden_braking"
          android:layout_width="80dp"
          android:layout_height="0.5dp"
          android:layout_centerInParent="true"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:background="@drawable/gradient_horizontal_transparent_white_transparent" />

        <TextView
          android:id="@+id/driver_count_sudden_brake"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/view_sudden_braking"
          android:layout_marginTop="4dp"
          android:gravity="center"
          android:text="--"
          android:textColor="@color/white" />

        <TextView
          android:id="@+id/alert_type_sudden_braking"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/driver_count_sudden_brake"
          android:layout_marginTop="4dp"
          android:gravity="center"
          android:text="Sudden Braking"

          android:textColor="@color/white"
          android:textSize="12sp"
          android:textStyle="bold" />


      </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
      android:id="@+id/card_sudden_lane"
      android:layout_width="100dp"
      android:layout_height="match_parent"
      android:background="#1e1f1f"
      app:cardBackgroundColor="@color/transparent"
      app:cardCornerRadius="8dp"
      app:cardElevation="4dp"
      app:cardUseCompatPadding="true">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/gradient_vertical_black_transparent_black">

        <ImageView
          android:layout_width="32dp"
          android:layout_height="32dp"
          android:layout_marginBottom="8dp"
          android:layout_above="@+id/view_sharp_turn"
          android:layout_centerHorizontal="true"
          app:srcCompat="@drawable/ic_sudden_lane_change" />


        <View
          android:id="@+id/view_sharp_turn"
          android:layout_width="80dp"
          android:layout_height="0.5dp"
          android:layout_centerInParent="true"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:background="@drawable/gradient_horizontal_transparent_white_transparent" />

        <TextView
          android:id="@+id/alert_type_sudden_lane"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/driver_count_sudden_lane"
          android:layout_marginTop="2dp"
          android:gravity="center"
          android:text="Bad Lane\nChange"

          android:textColor="@color/white"
          android:textSize="12sp"
          android:textStyle="bold" />

        <TextView
          android:id="@+id/driver_count_sudden_lane"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/view_sharp_turn"
          android:layout_marginTop="4dp"
          android:gravity="center"
          android:text="--"
          android:textColor="@color/white" />
      </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
      android:id="@+id/card_sharp_turn"
      android:layout_width="100dp"
      android:layout_height="match_parent"
      android:background="#1e1f1f"
      app:cardBackgroundColor="@color/transparent"
      app:cardCornerRadius="8dp"
      app:cardElevation="4dp"
      app:cardUseCompatPadding="true">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_vertical_black_transparent_black">



        <ImageView
          android:layout_width="32dp"
          android:layout_height="32dp"
          android:layout_marginBottom="8dp"
          android:layout_above="@+id/view_theftalert"
          android:layout_centerHorizontal="true"
          app:srcCompat="@drawable/ic_sharp_turn" />

        <View
          android:id="@+id/view_theftalert"
          android:layout_width="80dp"
          android:layout_height="1dp"
          android:layout_centerInParent="true"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:background="@drawable/gradient_horizontal_transparent_white_transparent" />

        <TextView
          android:id="@+id/alert_type_theftalert"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/driver_count_sharp_turn"
          android:layout_marginTop="4dp"
          android:gravity="center"
          android:text="Sharp Turn"
          android:textColor="@color/white"
          android:textSize="12sp"

          android:textStyle="bold" />

        <TextView
          android:id="@+id/driver_count_sharp_turn"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/view_theftalert"
          android:layout_marginTop="4dp"
          android:gravity="center"
          android:text="--"
          android:textColor="@color/white" />
      </RelativeLayout>

    </android.support.v7.widget.CardView>


  </LinearLayout>

</HorizontalScrollView>