<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/card_notification"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="68dp"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  card_view:cardBackgroundColor="@color/black"
  card_view:cardElevation="4dp"
  xmlns:app="http://schemas.android.com/apk/res-auto">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">
    <TextView
      android:id="@+id/notif_date"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:text=""
      android:textColor="#a0ffffff"
      android:layout_weight="2"
      android:gravity="end|center_vertical"
      />
    <TextView
      android:id="@+id/notif_time"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:text=""
      android:textColor="#a0ffffff"
      android:layout_weight="2"
      android:gravity="center"
      />
    <RelativeLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1">
      <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_vertical_semi_white_semi"
        android:layout_centerInParent="true"
        />
      <View
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_drawable_textview_number"
        />
    </RelativeLayout>
    <TextView
      android:id="@+id/notif_type"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:text=""
      android:textColor="@color/white"
      android:textStyle="bold"
      android:layout_weight="4"
      android:gravity="center_vertical"
      />

    <ImageView
      android:id="@+id/iv_info"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginLeft="4dp"
      android:layout_marginRight="4dp"
      android:layout_weight="1"
      app:srcCompat="@drawable/ic_info"
      android:padding="4dp"

      />



  </LinearLayout>
</androidx.cardview.widget.CardView >
