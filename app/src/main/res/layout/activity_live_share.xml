<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:background="#000"
  android:orientation="vertical">
  <include layout="@layout/toolbar_common"/>
  <RelativeLayout
    android:id="@+id/layout_select_time"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolbar_common"
    android:visibility="visible"
    >
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Choose the time duration for which you would like to share your car's location via web link"
      android:textColor="@color/white"
      android:padding="16dp"
      android:layout_marginTop="20dp"
      android:gravity="center"
      />
    <blackflame.com.zymepro.view.custom.CircleSeekbar
      android:id="@+id/minute_seekbar"
      android:layout_width="250dp"
      android:layout_height="250dp"
      android:layout_centerHorizontal="true"
      android:layout_centerInParent="true"
      app:wheel_max_process="59"
      app:wheel_unreached_width="32dp"
      app:wheel_scroll_only_one_circle="true"
      app:wheel_reached_color="@color/colorAccent"
      app:wheel_unreached_color="#ffffff"
      app:wheel_pointer_color="@color/colorAccent"
      />
    <ImageView
      android:id="@+id/iv_reset"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_alignTop="@+id/minute_seekbar"
      android:layout_toRightOf="@+id/minute_seekbar"
      app:srcCompat="@drawable/ic_refresh"
      />
    <TextView
      android:id="@+id/tv_time_share"
      android:layout_width="wrap_content"
      android:layout_centerInParent="true"
      android:textSize="22sp"
      android:text="00:00:00"
      android:textColor="@color/colorAccent"
      android:layout_height="wrap_content" />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="hh:mm:ss"
      android:layout_below="@id/tv_time_share"
      android:layout_centerHorizontal="true"
      android:textColor="#9dffffff"
      />
    <TextView
      android:id="@+id/tv_generate_url"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Generate Link"
      android:background="@color/colorAccent"
      android:padding="12dp"
      android:layout_alignParentBottom="true"
      android:gravity="center"
      android:textColor="@color/white"/>
  </RelativeLayout>
  <include
    layout="@layout/layout_live_share_timer"
    android:visibility="gone"/>
  <include
    layout="@layout/layout_progress_bar"
    android:visibility="gone"
    />

</RelativeLayout>