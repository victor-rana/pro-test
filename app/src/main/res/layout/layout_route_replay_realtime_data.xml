<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/containertop"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="@dimen/card_radius"
    card_view:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/top_card"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/titlespeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvSpeed"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Speed "
                    android:textColor="#46000000"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="--"
                    android:textColor="#2da9e1"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:background="#f0f4f4f4"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/titlerpm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvRpm"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="RPM"
                    android:textColor="#46000000"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvRpm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="--"
                    android:textColor="#2da9e1"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:background="#f0f4f4f4"
                />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/titlecoolant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvCoolant"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Coolant"

                    android:textColor="#46000000"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvCoolant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="--"
                    android:textColor="#2da9e1"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:background="#f0f4f4f4"
                />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/titleVoltage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvVoltage"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Voltage"

                    android:textColor="#46000000"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvVoltage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="--"
                    android:textColor="#2da9e1"
                    android:textSize="16sp"
                    android:textStyle="bold"/>


            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/current_car"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@id/top_card"
            android:layout_centerHorizontal="true"
            android:background="#2da9e1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/white"
                android:textStyle="bold"/>


        </RelativeLayout>

        <ListView
            android:id="@+id/listview_car_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_car"
            android:visibility="gone"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
