<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  android:id="@+id/contaier_bottom"
  android:layout_width="match_parent"
  android:layout_height="56dp"
  android:layout_alignParentBottom="true"
  android:background="@color/black"
  android:elevation="100dp"
  android:orientation="horizontal"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">
  <LinearLayout
    android:id="@+id/ll_triphistory"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    >

    <ImageView
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_gravity="center"
      android:paddingBottom="4dp"
      app:srcCompat="@drawable/ic_history"
      />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:text="Past Trips"
      android:textColor="@color/white"
      android:textSize="12sp"/>
  </LinearLayout>

  <View
    android:layout_width="1dp"
    android:layout_height="24dp"
    android:layout_gravity="center_vertical"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:background="#8d8f8f"/>

  <LinearLayout
    android:id="@+id/ll_alert"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="0.9"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    >

    <ImageView
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_gravity="center"
      android:paddingBottom="4dp"
      app:srcCompat="@drawable/ic_alerts"
      />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:text="Alerts"
      android:textColor="@color/white"
      android:textSize="12sp"/>
  </LinearLayout>

  <View
    android:layout_width="1dp"
    android:layout_height="24dp"
    android:layout_gravity="center_vertical"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:background="#8d8f8f"/>

  <LinearLayout
    android:id="@+id/ll_enginescan"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1.2"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    >

    <ImageView
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_gravity="center"
      android:paddingBottom="4dp"
      app:srcCompat="@drawable/ic_engine_health"/>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:text="Engine Scan"
      android:textColor="@color/white"
      android:textSize="12sp"/>
  </LinearLayout>

  <View
    android:layout_width="1dp"
    android:layout_height="24dp"
    android:layout_gravity="center_vertical"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:background="#8d8f8f"/>

  <LinearLayout
    android:id="@+id/ll_pitstop"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="0.9"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingTop="8dp"
    >

    <ImageView
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_gravity="center"
      android:paddingBottom="4dp"
      app:srcCompat="@drawable/ic_pitstop"/>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:text="Pitstop"
      android:textColor="@color/white"
      android:textSize="12sp"/>
  </LinearLayout>
  <View
    android:layout_width="1dp"
    android:layout_height="24dp"
    android:layout_gravity="center_vertical"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:background="#8d8f8f"/>
  <LinearLayout
    android:id="@+id/ll_analytics"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingTop="8dp"
    >
    <ImageView
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_gravity="center"
      android:paddingBottom="4dp"
      app:srcCompat="@drawable/ic_analytics"/>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:text="Analytics"
      android:textColor="@color/white"
      android:textSize="12sp"/>
  </LinearLayout>
</LinearLayout>
